
    <div id="userAction">
<h1>NOTIFY USER</h1>

<div class="login_form_basic contrast_basic">
    <div id="userAction">
        <h1>Notify User</h1>
        <form id="notifyForm" method="POST" action="/notifications/adminP2p">
            <input type="hidden" name="recipientId" value="<%= selectedUser._id %>">
            <input type="hidden" name="recipientName" value="<%= selectedUser.displayName %>">
            <br>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
    <br>
            <label for="content">Content</label>
            <textarea id="content" name="content" required></textarea>
    <br>
            <label for="interval">Interval</label>
            <select id="interval" name="interval">
                <option value="once">Once</option>
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
            </select>
    <br>
            <label for="actionType">Action Type</label>
            <input type="text" id="actionType" name="actionType">
    
            <button type="submit">Send Notification</button>
        </form>
        <button onClick='removeEl("userAction")'>Close Action Window</button>
    </div>
    
</div>

<button onClick='removeEl("userAction")'>close action window</button>
</div>
