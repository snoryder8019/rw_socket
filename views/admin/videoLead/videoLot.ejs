<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Control</title>
  <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    .video-card {
      border: 1px solid #ddd;
      border-radius: 4px;
      padding: 10px;
      margin-bottom: 20px;
    }
    .video-title {
      font-size: 1.2em;
      margin-bottom: 10px;
    }
    .video-upload-date {
      font-size: 0.9em;
      color: #666;
      margin-bottom: 10px;
    }
    .btn {
      display: inline-block;
      padding: 10px 15px;
      font-size: 1em;
      color: #fff;
      background-color: #007bff;
      border: none;
      border-radius: 4px;
      text-align: center;
      cursor: pointer;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Uploaded Videos</h1>
    <% videos.forEach(video => { %>
      <div class="video-card">
        <div class="video-title"><%= video.name %></div>
        <div class="video-upload-date">Uploaded on: <%= new Date(video.createdAt).toLocaleString() %></div>
        <button class="emit-viewers btn" data-video-url="<%= video.url %>">Play Video</button>
      </div>
    <% }); %>
  </div>

  <script>
   document.addEventListener('DOMContentLoaded', () => {
    console.log('domloaeeded videolot')
      const socket = io('/main_chat');  // Connecting to the '/main_chat' namespace
      const videoOverlay = document.getElementById('videoOverlay');
      const overlayVideo = document.getElementById('overlayVideo');
      const closeBtn = document.getElementById('closeBtn');

      closeBtn.addEventListener('click', () => {
        videoOverlay.style.display = 'none';
        overlayVideo.pause();
      });

      socket.on('playVideo', (data) => {
        overlayVideo.src = data.videoUrl;
        videoOverlay.style.display = 'flex';
        overlayVideo.play();
      });
    });
  </script>
</body>
</html>
