<div class="container">
  <h1>Uploaded Videos</h1>
  <!-- Video list dynamically generated by the server -->
  <% videos.forEach(video => { %>
    <div class="video-card">
      <div class="video-title"><%= video.name %></div>
      <div class="video-upload-date">Uploaded on: <%= new Date(video.createdAt).toLocaleString() %></div>
      <form action="/videoProduction/play/broadcastOverlay" method="post" style="display:inline;">
        <input type="hidden" name="videoUrl" value="<%= video.url %>">
        <button type="submit" class="emit-viewers btn">Play Video</button>
      </form>
    </div>
  <% }); %>
</div>
