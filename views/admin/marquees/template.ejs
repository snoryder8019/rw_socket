<div class="adminWindow">
  <div class="adminStatsRow">
    <% documents.forEach(marquee => { %>
      <div class="adminStat">
        <p><%= marquee.title %></p>
        <img alt="Marquee image" src="<%= marquee.mediumIcon %>" style="width: 50px; height: 50px;">
        
        <!-- Collapsible button to view/edit marquee details -->
        <button class="collapsible">view: <span class="carrot">&#9654;</span></button>
        <div class="content" data-url="/marquees/renderEditForm/<%= marquee._id %>"></div>

        <!-- Form to add multiple images to slides for marquees -->
        <h3>Add multiple images to slides</h3>
        <form action="/marquees/<%= marquee._id %>/upload-images" method="post" enctype="multipart/form-data">
          <input type="file" name="images" multiple>
          <button type="submit">Upload</button>
        </form>
      </div>
    <% }) %>
  </div>
</div>
