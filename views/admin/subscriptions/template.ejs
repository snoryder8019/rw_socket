<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subscriptions</title>

</head>
<body>
  <div class="adminWindow">
      <div class="adminStatsRow">
    <% subscriptions.forEach(subscription => { %>
        <div class="adminStat">
          <p>  <%= subscription.name %></p>
          <img alt="Add image to webapp." src="<%= subscription.mediumIcon %>">  
          <button class="collapsible" >view: <span class="carrot">&#9654;</span></button>
          <div class="content" data-url="/subscriptions/<%=subscription._id%>"></div>
        </div>

        <!-- Add more fields as needed -->
        <% }) %>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.collapsible').forEach(button => {
        button.addEventListener('click', async () => {
          const contentDiv = button.nextElementSibling;
          const url = contentDiv.getAttribute('data-url');

          if (contentDiv.innerHTML === "") {
            try {
              const response = await fetch(url);
              if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
              }
              const data = await response.text();
              contentDiv.innerHTML = data;
            } catch (error) {
              console.error('Error fetching subscription details:', error);
              contentDiv.innerHTML = '<p>Error loading details.</p>';
            }
          }

          button.classList.toggle('active');
          const carrot = button.querySelector('.carrot');
          carrot.innerHTML = button.classList.contains('active') ? '&#9660;' : '&#9654;';
          contentDiv.style.display = contentDiv.style.display === 'block' ? 'none' : 'block';
        });
      });
    });
  </script>
</body>
</html>
